---
interface Props {
  image: string;
  name: string;
  role: string;
  description?: string;
}

const { image, name, role, description } = Astro.props;
---

<div class="card">
  <img src={image} alt={name} />
  <h3>{name}</h3>
  <p>{role}</p>
  <p>{description}</p>
</div>
<style>
  .card {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    padding: 2rem;
    border: 1px solid var(--white);
    width: 100%;
    max-width: 30rem;

    img {
      width: 100%;
      height: auto;
      margin: auto;
    }
  }
</style>
